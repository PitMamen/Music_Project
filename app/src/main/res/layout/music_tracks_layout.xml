<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sidebar="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.allenliu.sidebar.SideBarDemoActivity">


    <include layout="@layout/home_title_layout"/>

       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <ImageView
               android:id="@+id/iv_mode_icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:src="@drawable/ic_mp_repeat_off_btn"
               android:paddingLeft="5dp"/>

           <TextView
               android:id="@+id/tv_play_mode"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="随机播放"
               android:layout_marginLeft="40dp"
               android:layout_centerVertical="true"/>

           <TextView
               android:id="@+id/tv_music_num"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:text="共100首"
               android:layout_centerVertical="true"/>

       </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#999999"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <ListView
            android:id="@+id/lv_music_detail"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:divider="#999999"
            android:dividerHeight="2dp"
            >
        </ListView>
        <com.allenliu.sidebar.SideBar
            android:id="@+id/navigation_bar"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            sidebar:scaleTime="1"
            android:paddingRight="15dp"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            />
    </LinearLayout>


    <include layout="@layout/bottom_title_player_layout"/>
</LinearLayout>
